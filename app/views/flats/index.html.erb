<div class="container">

  <p id="notice"><%= notice %></p>

  <h1>Flats</h1>

  <h2><%= link_to 'New flat listing', new_flat_path %></h2>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Address</th>
        <th>Description</th>
        <th>Price</th>
        <th>Sleeps</th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @flats.each do |flat| %>
        <tr>
          <td><%= flat.name %></td>
          <td><%= flat.address %></td>
          <td><%= flat.description %></td>
          <td><%= flat.price_per_night %></td>
          <td><%= flat.number_of_guests %></td>
          <td><%= link_to 'More info', flat %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

</div>
